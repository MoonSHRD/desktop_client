{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [ "es2015", "es2016", "es2017", "dom" ],
    "types": ["reflect-metadata"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "controllers/**/*",
    "migrations/*",
    "models/*",
    "grpc/*",
    "ipfs/*",
    "src/*",
    "testing/**/*",
    "web3/*"
  ]
}
