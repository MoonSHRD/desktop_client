style
    include modal-content.css
.modal-header
    h5.modal-title #{full_name}
    button.close(type='button', data-dismiss='modal', aria-label='Close')
        span(aria-hidden='true') Ã—
.modal-body
    .container
        .row
            .col-sm-3
                img.rounded-circle(src=avatar width=128 height=128)
            .col-sm
                table.table
                    tbody
                        tr
                            th(scope='row') Token name
                            td #{address}
                        tr
                            th(scope='row') Group name
                            td #{name}
                        tr
                            th(scope='row') Group information
                            td !{bio}

.modal-footer
    .container
        if (role !== "moderator")
            .row
                .col-sm-12
                    label Offer publication:
            .row.align-items-center
                .col-sm-8
                    textarea.form-control.noresize(rows="2")

                .col-sm-4
                    button(class='btn btn-primary col-sm-12' ) Suggest publication

