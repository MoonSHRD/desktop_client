.modal-header.modal-header_img
    .row.position-static.w-100.p-3.m-0
        .col-3
            .modal-header__img
                img.rounded-circle.avatarBg(src=avatar width=80 height=80)
        .col-9.justify-content-around.flex-column.d-flex
            .modal-header__name
                h5.modal-title #{name}
    button.close(type='button', data-dismiss='modal', aria-label='Close')
        span(aria-hidden='true') Ã—
.modal-body.modal-body_userinfo
    .container-fluid
        .row.align-items-center.flex-nowrap
            .col-3 Username
            .col-6.text-truncate
                span#copyTo.d-inline.select-true #{id}
            .col-3.text-right
                button.copyButton.btn.btn-link(type='button')
                    include ../../../img/icons/copy-solid.svg
        .row.align-items-center.flex-nowrap
            .col-3 Firstname
            .col-6 #{firstname}
            .col-3
        .row.align-items-center.flex-nowrap
            .col-3 Lastname
            .col-6 #{lastname}
            .col-3
        if bio
            .row.align-items-center.flex-nowrap
                .col-3 Bio
                .col-6 #{bio}
                .col-3
        .row.align-items-center.flex-nowrap
            .col-3 Balance
            .col-6 #{eth_balance} Coin.
            .col-3
.modal-footer