                    img(src="components/main/messagingblock/img/videoCall.png")

            a(data-id="")
                div(class='image')
                    img(src="components/main/messagingblock/img/files.png")

            a(data-id="")
                div(class='image')
                    img(src="components/main/messagingblock/img/dropDown_menu.png")


div(class="messaging_history" id="messaging_history")

    .tab-content
        #chat.tab-pane.fade.in.active.show(role='tabpanel')
            ul !{messages?messages:""}
            div(class="send_message_block")
                if (type === "join_channel" || type === "join_group_chat")
                    include join_button
                else if (type === "user_chat" || type === "group_chat" || (type === "channel" && role === "moderator"))
                    textarea(class="send_message_input"  placeholder="текст сообщения")
                    button(class="send_message_btn" data-translate-key="SEND_MESSAGE") отправить
        #buzz.tab-pane.fade(role='tabpanel') bbb
        #references.tab-pane.fade(role='tabpanel') ccc

