        a(class="peer_name" href='#'+ '/' + type + '/' + id) #{chat_name}


    if (type === "channel")
        ul.nav.nav-tabs(role='tablist')
            li.nav-item
                a.nav-link.active(href='#chat', role='tab', data-toggle='tab') chat
            li.nav-item
                a.nav-link(href='#buzz', role='tab', data-toggle='tab') else
            li.nav-item
                a.nav-link(href='#references', role='tab', data-toggle='tab') else


