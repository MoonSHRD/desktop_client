div.message(class=mine ? "message_out" : "message_in")
    .message__avatar
        img.rounded-circle.d-block(src = sender_avatar width = 44 height = 44)
    .message__bubble
        .message__text #{text}
        if files
            each file in files
                if file.preview
                    |
                    div.imageOutputFile(data-type="file" data-subtype="image" data-id=file.id)
                        img(src=file.file  width="200")
                        span.d-block.w-100 #{file.name}
                else
                    |
                    div.docOutputFile(data-type="file" data-subtype="file" data-id=file.id)
                        if file.downloaded
                            .docOutputFile__icon
                                svg.svg-inline--fa.fa-file.fa-w-16(aria-hidden='true', data-prefix='fas', data-icon='file', role='img', xmlns='http://www.w3.org/2000/svg', viewBox='0 0 384 512')
