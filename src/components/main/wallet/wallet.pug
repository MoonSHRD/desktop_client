div.walletLeft
    div.userBar
        include infopanel.pug
    div.walletInfo
        table
            tbody
                tr
                    td Total ETH
                    th 10000
                tr
                    td ETH in tokens
                    th 23
                tr
                    td Free ETH
                    th 123


