style
    include 123.css
.allauth
    .logo-auth
    .moon-auth
    .welcome-auth
        .div1 Welcome
        .div2 to Moonshard!
    form#profile_form
        // progressbar
        ul#progressbar
            li.active
            li
            li
        // fieldsets
        fieldset
            h2.fs-title Step 1
            h3.fs-subtitle Enter 12 words of backup phrase to restore your account or generate new one with a button below.
            textarea.invalid(rows='4', name='mnemonic', placeholder='Enter any 12 words in a space, or click the "Generate" button' id='input_mnemonic' required=true)
            input.action-button(type='button', value='Generate' id='generate_mnemonic')
            h3.fs-warning !Do not forget to save the phrase on paper to avoid loss!
            h2.next-step-title Step 2
            input.next.action-button(type='button', name='next', id='input_mnemonic_next')
        fieldset
            h2.fs-title Step 2
            h3.fs-subtitle How we can call you?
            input.invalid(name='firstname', placeholder='Firstname', type='text' required=true)
            input(name='lastname', placeholder='Lastname', type='text' )
            textarea(rows='5', name='bio', placeholder='Enter bio')
            h2.next-step-title Step 3
            input.next.action-button(type='button', name='next')
        fieldset
            h2.fs-title Step 3
            h3.fs-subtitle You can upload your photo
            .avatar_preview
                img.rounded-circle(id='avatar_preview' src='components/auth/default-avatar1.jpg')
            .input-file-container
                input#my-file.input-file(type='file' name='avatar')
                label.input-file-trigger(tabindex='0', for='my-file') Select an avatar
            //input.previous.action-button(type='button', name='previous', value='Previous')
            h2.next-step-title FINISH
            input.submit.action-button(type='submit', name='submit', value='')
script
    include 123.js
