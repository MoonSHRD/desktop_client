style
    include 123.css
.allauth
    form#profile_form
        // progressbar
        ul#progressbar
            li.active Account Setup
            li Social Profiles
            li Personal Details
        // fieldsets
        fieldset
            h2.fs-title Create your account
            h3.fs-subtitle This is step 1
            textarea(rows='4', name='mnemonic', placeholder='Enter passphrase' id='input_mnemonic' required=true)
            input.action-button(type='button', value='Generate' id='generate_mnemonic')
            input.next.action-button(type='button', name='next', value='Next')
        fieldset
            h2.fs-title Social Profiles
            h3.fs-subtitle Your presence on the social network
            input(name='firstname', placeholder='Firstname', type='text' required=true)
            input(name='lastname', placeholder='Lastname', type='text')
            textarea(rows='5', name='bio', placeholder='Enter bio')
            input.previous.action-button(type='button', name='previous', value='Previous')
            input.next.action-button(type='button', name='next', value='Next')
        fieldset
            h2.fs-title Personal Details
            h3.fs-subtitle We will never sell it
            .avatar_preview
                img.rounded-circle(id='avatar_preview' src='components/auth/default-avatar.svg')
            .input-file-container
                input#my-file.input-file(type='file' name='avatar')
                label.input-file-trigger(tabindex='0', for='my-file') Select an avatar
            input.previous.action-button(type='button', name='previous', value='Previous')
            input.submit.action-button(type='submit', name='submit', value='Submit')
script
    include 123.js
