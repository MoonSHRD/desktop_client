{
  "name": "messanger_desktop_client",
  "version": "1.0.0",
  "description": "Messanger desktop client",
  "main": "./src/main.js",
  "contributors": [
    {
      "name": "Nikita Metelkin",
      "email": "nikita.metelkin@gmail.com",
      "url": "https://github.com/Lonny95"
    }
  ],
  "author": {
    "name": "MoonSHRD team",
    "email": "moonshard@team.com",
    "url": "https://github.com/MoonSHRD"
  },
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "start": "electron .",
    "npm_install": "npm install; ./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "yarn_install": "yarn install; ./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "yarn_update": "yarn add moonshard_core@latest; ./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "package-linux": "electron-packager . Moonshard --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=release-builds --icon=src/icon.png --version-string.ProductName=\"Moonshard\"",
    "package-mac": "electron-packager . Moonshard --overwrite --asar=true --platform=darwin --arch=x64 --prune=true --out=release-builds --version-string.ProductName=\"Moonshard\"",
    "package-win32": "electron-packager . Moonshard --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Moonshard\"",
    "package-win32-all": "electron-packager . Moonshard --overwrite --asar=true --platform=win32 --arch=ia32,x64 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Moonshard\"",
    "package-win64": "electron-packager . Moonshard --overwrite --asar=false --platform=win32 --arch=x64 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Moonshard\"",
    "rebuild_packages": "./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "build_platforms": "npm run package-linux && npm run package-win64",
    "dev:css": "node-sass --watch --include-path scss src/scss/index.scss src/css/index.min.css --source-map-embed true compressed",
    "prebuild:css": "node-sass --include-path scss src/scss/index.scss src/css/index.css --source-map-embed true",
    "build:css": "postcss --use autoprefixer -b \"last 2 versions\" < src/css/index.css | postcss --use cssnano > src/css/index.min.css",
    "css": "npm run prebuild:css | npm run build:css"
  },
  "includeSources": true,
  "devDependencies": {
    "electron": "^2.0.7",
    "electron-builder": "^20.28.4",
    "electron-packager": "^12.1.0",
    "electron-rebuild": "^1.8.2"
  },
  "bake": {
    "description": "Scaffold a basic ES6 setup",
    "scripts": {
      "start": "echo Starting generation of default template",
      "prestart": "echo prestart",
      "poststart": "echo poststart",
      "install": "npm install --loglevel warn --cache-min Infinity",
      "preinstall": "echo Installing dependencies ...",
      "postinstall": "npm ls --depth 0"
    }
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "messenger",
    "libp2p",
    "moonshard",
    "decentralized"
  ],
  "license": "CC0-1.0",
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "animate.css": "^3.7.0",
    "autoprefixer": "^9.2.1",
    "autoresize-textarea": "^1.1.3",
    "better-queue": "^3.8.10",
    "bootstrap": "^4.1.3",
    "bootstrap-notify": "^3.1.3",
    "bourbon": "^5.1.0",
    "cssnano": "^4.1.5",
    "electron-pug": "^2.0.0",
    "ethers": "^4.0.10",
    "file-encryptor": "^0.1.1",
    "grpc": "^1.16.0",
    "ipfs-api": "^24.0.2",
    "jquery": "^3.3.1",
    "jquery-autogrow-textarea": "^1.2.1",
    "jqueryui": "^1.11.1",
    "js-x25519": "https://github.com/CryptoEsel/js-x25519",
    "l20n": "^5.0.0",
    "loom-js": "^1.4.3",
    "loom-truffle-provider": "^0.5.0",
    "moonshard_core": "^0.1.61",
    "node-sass": "^4.9.4",
    "peer-id": "^0.11.0",
    "popper.js": "^1.14.4",
    "postcss-cli": "^6.0.1",
    "pug": "^2.0.3",
    "qbox": "^0.1.7",
    "react": "^16.4.2",
    "slick-carousel": "^1.8.1",
    "sqlite3": "^4.0.3",
    "text-encoding": "^0.7.0",
    "typeorm": "^0.2.7",
    "waypoints": "^4.0.1",
    "web3": "^1.0.0-beta.36"
  },
  "build": {
    "appId": "moonshard",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
