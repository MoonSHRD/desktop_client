{
  "name": "moonshard",
  "version": "0.3.2",
  "description": "Moonshard desktop client",
  "main": "./src/main.js",
  "contributors": [
    {
      "name": "Nikita Metelkin",
      "email": "nikita.metelkin@gmail.com",
      "url": "https://github.com/Lonny95"
    }
  ],
  "author": {
    "name": "MoonSHRD team",
    "email": "moonshard@team.com",
    "url": "https://github.com/MoonSHRD"
  },
  "repository": "https://github.com/MoonSHRD/desktop_client",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "start": "electron .",
    "rm-js-r": "find . -type f -name '*.js' | grep -vE '^./node_modules' | xargs -d'\n' rm",
    "rm-js-map-r": "find . -type f -name '*.js.map' | grep -vE '^./node_modules' | xargs -d'\n' rm",
    "compile-ts": "tsc",
    "dev:css": "node-sass --watch --include-path scss src/scss/index.scss src/css/index.min.css --source-map-embed true compressed",
    "prebuild:css": "node-sass --include-path scss src/scss/index.scss src/css/index.css --source-map-embed true",
    "build:css": "postcss --use autoprefixer -b \"last 2 versions\" < src/css/index.css | postcss --use cssnano > src/css/index.min.css",
    "compile-css": "npm run prebuild:css | npm run build:css",
    "compile-js": "uglifyjs -c -o src/index.min.js src/index.js",
    "postinstall": "electron-builder install-app-deps && yarn compile-css && yarn compile-js && yarn compile-ts"
  },
  "includeSources": true,
  "devDependencies": {
    "electron": "3.0.8",
    "electron-builder": "^20.33.2"
  },
  "keywords": [
    "electron",
    "messenger",
    "moonshard",
    "decentralized"
  ],
  "license": "CC0-1.0",
  "dependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "@types/node": "^10.12.9",
    "animate.css": "^3.7.0",
    "autoprefixer": "^9.2.1",
    "autoresize-textarea": "^1.1.3",
    "benchmark": "^2.1.4",
    "better-queue": "^3.8.10",
    "bootstrap": "^4.1.3",
    "bootstrap-notify": "^3.1.3",
    "bourbon": "^5.1.0",
    "choices.js": "^4.1.3",
    "cssnano": "^4.1.5",
    "electron-log": "^2.2.17",
    "electron-pug": "^2.0.0",
    "electron-updater": "^4.0.4",
    "ethers": "^4.0.10",
    "file-encryptor": "^0.1.1",
    "grpc": "^1.16.0",
    "ipfs-api": "^24.0.2",
    "jquery": "^3.3.1",
    "jquery-autogrow-textarea": "^1.2.1",
    "jqueryui": "^1.11.1",
    "js-x25519": "git://github.com/CryptoEsel/js-x25519.git",
    "l20n": "^5.0.0",
    "loom-js": "^1.4.3",
    "loom-truffle-provider": "^0.5.0",
    "moonshard_core": "^0.1.61",
    "node-sass": "^4.9.4",
    "peer-id": "^0.11.0",
    "popper.js": "^1.14.4",
    "postcss-cli": "^6.0.1",
    "pug": "^2.0.3",
    "qbox": "^0.1.7",
    "react": "^16.4.2",
    "reflect-metadata": "^0.1.12",
    "simple-scrollbar": "^0.4.0",
    "slick-carousel": "^1.8.1",
    "sqlite3": "^4.0.3",
    "text-encoding": "^0.7.0",
    "typeorm": "^0.2.7",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.4.9",
    "waypoints": "^4.0.1",
    "web3": "^1.0.0-beta.36"
  },
  "build": {
    "publish": [
      {
        "useMultipleRangeRequest": false,
        "provider": "generic",
        "url": "http://mnshrd.vialfeps.ru/updates/"
      }
    ],
    "appId": "moonshard",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network",
      "icon": "src/img/icon.png"
    },
    "win": {
      "target": [
        "nsis-web"
      ],
      "compression": "maximum",
      "icon": "src/img/icon.ico",
      "files": [
        "**/*",
        "dev-app-update.yml",
        "!dist/",
        "!wwwroot/"
      ]
    }
  }
}
