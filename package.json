{
  "name": "messanger_desktop_client",
  "version": "1.0.0",
  "description": "Messanger desktop client",
  "main": "./src/main.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron .",
    "npm_install": "npm install; ./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "yarn_install": "yarn install; ./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "yarn_update": "yarn add moonshard_core@latest; ./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "package-linux": "electron-packager . Moonshard --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=release-builds --icon=src/icon.png --version-string.ProductName=\"Moonshard\"",
    "package-mac": "electron-packager . Moonshard --overwrite --asar=true --platform=darwin --arch=x64 --prune=true --out=release-builds --version-string.ProductName=\"Moonshard\"",
    "package-win32": "electron-packager . Moonshard --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Moonshard\"",
    "package-win64": "electron-packager . Moonshard --overwrite --asar=true --platform=win32 --arch=x64 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Moonshard\"",
    "rebuild_packages": "./node_modules/.bin/electron-rebuild  -f -w sqlite3",
    "build_platforms": "npm run package-linux && npm run package-win64"
  },
  "includeSources": true,
  "devDependencies": {
    "electron": "^2.0.7",
    "electron-rebuild": "^1.8.2"
  },
  "bake": {
    "description": "Scaffold a basic ES6 setup",
    "scripts": {
      "start": "echo Starting generation of default template",
      "prestart": "echo prestart",
      "poststart": "echo poststart",
      "install": "npm install --loglevel warn --cache-min Infinity",
      "preinstall": "echo Installing dependencies ...",
      "postinstall": "npm ls --depth 0"
    }
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "messenger",
    "libp2p",
    "moonshard",
    "decentralized"
  ],
  "author": "MoonSHRD team",
  "license": "CC0-1.0",
  "dependencies": {
    "animate.css": "^3.7.0",
    "better-queue": "^3.8.10",
    "bootstrap": "^4.1.3",
    "bootstrap-notify": "^3.1.3",
    "electron-packager": "^12.1.0",
    "electron-pug": "^2.0.0",
    "ipfs-api": "^24.0.1",
    "jquery": "^3.3.1",
    "jqueryui": "^1.11.1",
    "js-x25519": "https://github.com/CryptoEsel/js-x25519",
    "l20n": "^5.0.0",
    "loom-js": "^1.4.3",
    "loom-truffle-provider": "^0.5.0",
    "moonshard_core": "0.1.42",
    "peer-id": "^0.11.0",
    "popper.js": "^1.14.4",
    "pug": "^2.0.3",
    "qbox": "^0.1.7",
    "react": "^16.4.2",
    "slick-carousel": "^1.8.1",
    "sqlite3": "^4.0.2",
    "text-encoding": "^0.7.0",
    "typeorm": "^0.2.7",
    "web3": "^1.0.0-beta.36"
  }
}
